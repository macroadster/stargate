FROM golang:1.23 AS builder
WORKDIR /app

# Cache deps
COPY go.mod go.sum ./
RUN go mod download

# Build MCP server
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/stargate-mcp ./cmd/mcpserver

FROM debian:bookworm-slim
RUN useradd -m -u 1000 stargate && apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY --from=builder /out/stargate-mcp /usr/local/bin/stargate-mcp
EXPOSE 3002
USER stargate
ENTRYPOINT ["/usr/local/bin/stargate-mcp"]
